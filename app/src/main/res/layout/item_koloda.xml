<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="400dp"
    android:layout_gravity="center"
    android:background="@drawable/card_shape"
    android:backgroundTint="@color/white"
    app:cardCornerRadius="29dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/alphabetImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.806"
            app:shapeAppearanceOverlay="@style/shape_card"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/alphabetText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/comfortaa"
            android:text="А"
            android:textColor="@color/text_color_dark"
            android:textSize="74sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/alphabetImage"
            app:layout_constraintEnd_toEndOf="@+id/alphabetImage"
            app:layout_constraintStart_toStartOf="@+id/alphabetImage"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/imageAlphabetText"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/comfortaa"
            android:text="Алма"
            android:textColor="@color/text_color_dark"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/alphabetImage"
            app:layout_constraintStart_toStartOf="@+id/alphabetImage"
            app:layout_constraintTop_toBottomOf="@+id/alphabetImage" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>